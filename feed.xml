---
# Remember to set baseurl in your _config.yml file
layout: nil
sitemap:
  priority: 0.7
  changefreq: weekly
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title>{{ site.baseurl }}</title>
  <link href="{{ site.baseurl }}/"/>
  <link type="application/atom+xml" rel="self" href="{{ site.baseurl }}/feed.xml"/>
  <link rel="hub" href="https://pubsubhubbub.appspot.com"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.baseurl }}/</id>
  <author>
    <name>{{ site.author.name }}</name>
    <email>{{ site.author.email }}</email>
  </author>

  {% for post in site.posts %}
  <entry>
    <id>{{ site.baseurl }}{{ post.url }}</id>
    <link type="text/html" rel="alternate" href="{{ site.baseurl }}{{ post.url }}"/>
    <title>{{ post.title | xml_escape }}</title>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{% if post.lastmod %}{{ post.lastmod | date_to_xmlschema }}{% else %}{{ post.date | date_to_xmlschema }}{% endif %}</updated>
    <author>
      <name>{{ site.author.name }}</name>
      <uri>{{ site.baseurl }}</uri>
    </author>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
 
</feed>

